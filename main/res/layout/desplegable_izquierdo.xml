<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/btn_mostrar_eventos"
        android:layout_width="412dp"
        android:layout_height="47dp"
        android:onClick="LlamadaMostrarEventosCalendario"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:text="Mostrar Eventos Calendario"
        android:textAlignment="textStart"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lv_grupos_desplegable" />

    <TextView
        android:id="@+id/btn_crear_grupo"
        android:layout_width="412dp"
        android:layout_height="47dp"
        android:layout_marginTop="60dp"
        android:onClick="LlamadaCrearGrupo"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:text="Crear Grupo"
        android:textAlignment="textStart"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lv_grupos_desplegable"
        android:layout_width="411dp"
        android:layout_height="445dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_crear_grupo" />
</androidx.constraintlayout.widget.ConstraintLayout>